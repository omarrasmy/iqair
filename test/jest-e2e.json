{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": ["node_modules/(?!axios)"],
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "useESM": true,
      "tsconfig": "tsconfig.json"
    }
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1",
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
